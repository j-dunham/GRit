#!/usr/bin/env ruby
# frozen_string_literal: true

command, *args = ARGV

if command.nil?
  warn 'Usage: gitrb <command> [<args>]'
  exit
end

command_path = File.expand_path("../grit-#{command}", __FILE__)
unless File.exist? command_path
  warn 'No such command'
  exit 1
end

exec command_path, *args
